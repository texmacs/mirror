(use-modules (srfi srfi-10))

(define-reader-ctor 'rx make-regexp)

(with-test-prefix "hash-comma read extension"

  (pass-if "basic feature"
     (let* ((rx #,(rx "^foo$")))
       (and (->bool (regexp-exec rx "foo"))
	    (not (regexp-exec rx "bar foo frob"))))))
